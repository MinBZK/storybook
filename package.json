{
  "name": "@regelrecht/design-system",
  "version": "0.1.0",
  "description": "Design System voor RegelRecht - Nederlandse Overheid",
  "type": "module",
  "main": "dist/components/rr-components.js",
  "exports": {
    ".": "./dist/components/rr-components.js",
    "./css": "./dist/css/tokens.css",
    "./css/primitives": "./dist/css/primitives.css",
    "./css/semantics": "./dist/css/semantics.css",
    "./css/components": "./dist/css/components.css"
  },
  "files": [
    "dist",
    "fonts"
  ],
  "scripts": {
    "build": "npm run build:tokens && npm run build:components",
    "build:tokens": "node style-dictionary.config.js",
    "build:components": "node scripts/build-components.js",
    "dev": "npm run build && npm run serve",
    "serve": "npx http-server . -p 3000 -c-1",
    "clean": "rm -rf dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:a11y": "eslint src/ --rule 'lit-a11y/*: error'",
    "format": "prettier --write \"src/**/*.{js,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,css,md}\"",
    "test:a11y": "pa11y-ci",
    "test:a11y:storybook": "start-server-and-test storybook http://localhost:6006 test:a11y",
    "test:visual": "lost-pixel",
    "test:visual:update": "lost-pixel update",
    "test:visual:storybook": "start-server-and-test storybook http://localhost:6006 test:visual",
    "test:figma": "lost-pixel --config lostpixel.figma.config.ts",
    "test:figma:update": "lost-pixel update --config lostpixel.figma.config.ts",
    "test:figma:storybook": "start-server-and-test storybook http://localhost:6006 test:figma",
    "prepare": "pre-commit install || true"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.11.0",
    "@cianfrani/figma-testing-library": "^0.3.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-designs": "^11.1.0",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/web-components-vite": "^10.1.10",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.24.0",
    "eslint": "^9.17.0",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "globals": "^15.14.0",
    "lit": "^3.3.1",
    "lost-pixel": "^3.22.0",
    "pa11y-ci": "^4.0.1",
    "playwright": "^1.57.0",
    "prettier": "^3.4.2",
    "puppeteer": "^24.34.0",
    "start-server-and-test": "^2.1.3",
    "storybook": "^10.1.10",
    "style-dictionary": "^4.2.0",
    "vitest": "^4.0.16",
    "wait-on": "^8.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "design-system",
    "web-components",
    "rijksoverheid",
    "regelrecht"
  ],
  "license": "EUPL-1.2",
  "dependencies": {
    "@rijkshuisstijl-community/font": "^1.1.2"
  }
}
